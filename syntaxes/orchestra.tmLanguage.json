{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Orchestra",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#keywords" },
		{ "include": "#storage" },
		{ "include": "#functions" },
		{ "include": "#constants" },
		{ "include": "#operators" },
		{ "include": "#identifiers" }
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.orchestra",
					"match": "//.*$"
				},
				{
					"name": "comment.block.orchestra",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.orchestra",
					"match": "\\b(if|else|while|return)\\b"
				}
			]
		},
		"storage": {
			"patterns": [
				{
					"name": "storage.type.orchestra",
					"match": "\\b(let|fn)\\b"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "meta.function.orchestra",
					"match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
					"captures": {
						"1": { "name": "storage.type.function.orchestra" },
						"2": { "name": "entity.name.function.orchestra" }
					}
				},
				{
					"name": "meta.function-call.orchestra",
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
					"captures": {
						"1": { "name": "entity.name.function.call.orchestra" }
					}
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.hex.orchestra",
					"match": "\\b0x[0-9a-fA-F]+\\b"
				},
				{
					"name": "constant.numeric.octal.orchestra",
					"match": "\\b0o[0-7]+\\b"
				},
				{
					"name": "constant.numeric.binary.orchestra",
					"match": "\\b0b[01]+\\b"
				},
				{
					"name": "constant.numeric.decimal.orchestra",
					"match": "\\b-?[0-9]+\\b"
				},
				{
					"name": "constant.language.boolean.orchestra",
					"match": "\\b(true|false)\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.logical.orchestra",
					"match": "\\b(and|or)\\b"
				},
				{
					"name": "keyword.operator.comparison.orchestra",
					"match": "(==|!=|<=|>=|<|>)"
				},
				{
					"name": "keyword.operator.assignment.orchestra",
					"match": "@?="
				},
				{
					"name": "keyword.operator.arithmetic.orchestra",
					"match": "[+\\-]"
				},
				{
					"name": "keyword.operator.unary.orchestra",
					"match": "[!@&]"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.other.orchestra",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		}
	},
	"scopeName": "source.orch"
}
